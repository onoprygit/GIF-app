<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GIFapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="RoundedCorner10Percent">
<!--        <item name="cornerSize">10%</item>-->
        <item name="android:topRightRadius">10dp</item>
        <item name="android:topLeftRadius">10dp</item>
    </style>

    <style name="RoundedImageBottom">
        <item name="shapeAppearance">@style/RoundedCornersBottom</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="RoundedCornersBottom">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10%</item>
        <item name="cornerSizeBottomLeft">10%</item>
    </style>

    <style name="RoundedImageAll">
        <item name="shapeAppearance">@style/RoundedCornersAll</item>
    </style>

    <style name="RoundedCornersAll">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10%</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeTopLeft">10%</item>
    </style>

</resources>